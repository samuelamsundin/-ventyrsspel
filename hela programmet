A_Player = Player("name",15,15,10,10,10,10,1,5)
A_Player.nya_namnet()
print("Välkomen. Stig in i om du vågar...\n")
time.sleep(2)
while A_Player.level <= 10:
    valet()
    if A_Player.Döda_kroppsdelar() == True:
        break
if A_Player.level == 10:
    print("Du vann")
else:
    print("Du förlorade. Spela gärna igen")
