A_Player = Player("name",15,15,10,10,10,10,1,5)
A_Player.nya_namnet()
skrivandetext("Välkomen. Stig in i om du vågar...\n")
time.sleep(2)
valet()
skrivandetext("")
if A_Player.level == 10:
    skrivandetext("Du vann")
else:
    skrivandetext("Du förlorade. Spela gärna igen")
